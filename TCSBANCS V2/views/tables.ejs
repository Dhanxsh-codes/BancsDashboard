<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Available Dashboards</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
  <style>
    body {
      padding-top: 2rem;
    }
    .container {
      max-width: 800px;
    }
    .card {
      margin-bottom: 1.5rem;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    .table-list {
      list-style: none;
      padding-left: 0;
    }
    .table-list li {
      padding: 10px 15px;
      border-bottom: 1px solid #eee;
    }
    .table-list li:last-child {
      border-bottom: none;
    }
  </style>
</head>
<%- include ('partials/header.ejs') %>
<body>
  <div class="container">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Tables</li>
      </ol>
    </nav>
    
    <h1 class="mb-4">Available Dashboards</h1>
    
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0">Product QA Dashboards</h5>
      </div>
      <div class="card-body">
        <% if (tables && tables.length > 0) { %>
          <ul class="table-list">
            <% tables.forEach(table => { %>
              <li class="d-flex justify-content-between align-items-center">
                <span><i class="bi bi-table me-2"></i> <%= table %></span>
                <a href="/data/<%= table %>" class="btn btn-sm btn-outline-primary">View Data</a>
              </li>
            <% }); %>
          </ul>
        <% } else { %>
          <p class="text-center">No tables found. Upload an Excel file first.</p>
        <% } %>
      </div>
    </div>
    
    <div class="text-center">
      <a href="/" class="btn btn-primary">
        <i class="bi bi-upload"></i> Upload Dashboard
      </a>
    </div>
  </div>
  <%- include ('partials/footer.ejs') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
