<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Data from <%= tableName %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
  <style>
    body {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
    .container {
      max-width: 1200px;
    }
    .table-container {
      overflow-x: auto;
    }
  </style>
</head>
<%- include ('partials/header.ejs') %>
<body>
  <div class="container">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/tables">Tables</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= tableName %></li>
      </ol>
    </nav>
    
    <h1 class="mb-4">Data from: <%= tableName %></h1>
    
    <div class="table-container">
      <table class="table table-striped table-bordered">
        <thead class="table-dark">
          <tr>
            <% columns.forEach(column => { %>
              <th><%= column %></th>
            <% }); %>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(row => { %>
            <tr>
              <% columns.forEach(column => { %>
                <td><%= row[column] %></td>
              <% }); %>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    
    <div class="mt-4">
      <a href="/" class="btn btn-primary">
        <i class="bi bi-house-fill"></i> Home
      </a>
      <a href="/tables" class="btn btn-secondary">
        <i class="bi bi-table"></i> All Tables
      </a>
    </div>
  </div>
  <%- include ('partials/footer.ejs') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
