<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TCS BANCS Product QA</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      padding-top: 2rem;
    }
    .container {
      max-width: 800px;
    }
    .card {
      margin-bottom: 1.5rem;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
  </style>
</head>
<%- include ('partials/header.ejs') %>
<body class="d-flex flex-column h-100">
  <div class="container">
    <h1 class="text-center mb-4">PRODUCT QA - DASHBOARD</h1>
    
    <div class="card w-50 mx-auto">
      <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0">Upload DASHBOARD Excel File</h5>
      </div>
      <div class="card-body">
        <form action="/upload" method="post" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="excelFile" class="form-label">Select Excel File:</label>
            <input type="file" class="form-control" id="excelFile" name="excelFile" accept=".xlsx, .xls" required>
          </div>
          <button type="submit" class="btn btn-primary">Upload</button>
        </form>
      </div>
    </div>
    
    <div class="text-center mb-4">
      <a href="/tables" class="btn btn-secondary">View All Available Dashboards</a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <%- include ('partials/footer.ejs') %>
</body>
</html>
